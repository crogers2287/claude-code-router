{
  "name": "@musistudio/claude-code-router",
  "version": "1.0.31",
  "description": "Use Claude Code without an Anthropics account and route it to another LLM provider",
  "bin": {
    "ccr": "./dist/cli.js"
  },
  "scripts": {
    "build": "npm run build:server && npm run build:ui",
    "build:server": "esbuild src/cli.ts --bundle --platform=node --outfile=dist/cli.js && shx cp node_modules/tiktoken/tiktoken_bg.wasm dist/tiktoken_bg.wasm",
    "build:ui": "esbuild src/web/index.tsx --bundle --outfile=dist/web/bundle.js --loader:.css=text --loader:.svg=text --define:process.env.NODE_ENV=\\\"production\\\"",
    "dev:ui": "esbuild src/web/index.tsx --bundle --outfile=dist/web/bundle.js --loader:.css=text --loader:.svg=text --define:process.env.NODE_ENV=\\\"development\\\" --watch",
    "release": "npm run build && npm publish"
  },
  "keywords": [
    "claude",
    "code",
    "router",
    "llm",
    "anthropic"
  ],
  "author": "musistudio",
  "license": "MIT",
  "dependencies": {
    "@fastify/static": "^8.2.0",
    "@musistudio/llms": "^1.0.17",
    "dotenv": "^16.4.7",
    "json5": "^2.2.3",
    "openurl": "^1.1.1",
    "tiktoken": "^1.0.21",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/node": "^24.0.15",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "esbuild": "^0.25.1",
    "fastify": "^5.4.0",
    "playwright": "^1.54.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "shx": "^0.4.0",
    "typescript": "^5.8.2"
  },
  "publishConfig": {
    "ignore": [
      "!build/",
      "src/",
      "screenshots/"
    ]
  }
}
